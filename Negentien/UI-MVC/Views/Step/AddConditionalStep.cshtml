        </div>
    </div>
    <!--open question tab -->
    <div class="tab-pane fade" id="pills-open" role="tabpanel" aria-labelledby="pills-open-tab" tabindex="0">
        <h1>@Resources.open_question</h1>
        <div class="row">
            <label for="nameInput_o" class="col-sm-2 form-label">@Resources.give_name_step</label>
            <div class="col-sm-10">
                <input id="nameInput_o" class="form-control" type="text">

            <div class="col-sm-10">
                <input id="nameInput_r" class="form-control" type="text">
                <span class="text-danger" id="nameInputSpan_r"></span>
            </div>
        </div>
        <div class="row">
            <h2>@Resources.question</h2>
            <label for="vraagInput_r" class="col-sm-2 form-label">@Resources.what_question</label>
            <div class="col-sm-10">
                <input id="vraagInput_r" class="form-control" type="text">
                <span class="text-danger" id="vraagInputSpan_r"></span>
            </div>
        </div>
        <div class="row">
            <h2>@Resources.answers</h2>
            <label for="antwoordInput1_r" class="col-sm-2 form-label">@Resources.what_answeroption</label>
            <div class="col-sm-10" id="antwoordInput_r">

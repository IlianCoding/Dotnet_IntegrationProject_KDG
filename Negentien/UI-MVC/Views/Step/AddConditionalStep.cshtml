            <div class="col-sm-10">
                <input id="vraagInput_s" class="form-control" type="text">
                <span class="text-danger" id="vraagInputSpan_s"></span>
            </div>
        </div>
        <div class="row">
            <h2>@Resources.answers</h2>
            <label for="antwoordInput1_s" class="col-sm-2 form-label">@Resources.what_answeroption</label>
            <div class="col-sm-10" id="antwoordInput_s">

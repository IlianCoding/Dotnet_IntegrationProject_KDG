            <input id="answeroption_s5" type="radio">
        </div>
        <div>
            <h3>Make a conditional point</h3>
            <label for="cp_naam_s" class="col-sm-2 form-label">What is the name:</label>
            <div class="col-sm-10">
                <input id="cp_naam_s" class="form-control" type="text">
            </div>
            <label for="cp_step_s" class="col-sm-2 form-label">What step does it lead to:</label>
            <div class="col-sm-10">
                <select id="cp_step_s">
                    <option value="option1" class="text-light">Select the step</option>
                </select>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-primary" id="singleButton"></button>
</div>

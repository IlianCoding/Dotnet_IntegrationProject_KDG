@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NT.BL.Domain.flowpck
@model NT.BL.Domain.flowpck.Flow

@{
    ViewBag.Title = "Create step";
    Layout = "_Layout";
}

@section Scripts
{
    <script src="~/dist/site.entry.js" defer></script>
    <script src="~/dist/home.entry.js" defer></script>
}


<h2>Create a new step</h2>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-multi-tab" data-bs-toggle="pill" data-bs-target="#pills-multi" type="button" role="tab" aria-controls="pills-multi" aria-selected="true">Multiple choice</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-single-tab" data-bs-toggle="pill" data-bs-target="#pills-single" type="button" role="tab" aria-controls="pills-single" aria-selected="false">Single choice</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-range-tab" data-bs-toggle="pill" data-bs-target="#pills-range" type="button" role="tab" aria-controls="pills-range" aria-selected="false">Range question</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-open-tab" data-bs-toggle="pill" data-bs-target="#pills-open" type="button" role="tab" aria-controls="pills-open" aria-selected="false">Open question</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-info-tab" data-bs-toggle="pill" data-bs-target="#pills-info" type="button" role="tab" aria-controls="pills-info" aria-selected="false">Information</button>
    </li>
</ul>


<div class="tab-content" id="pills-tabContent">
<!--multiple question tab -->
<div class="tab-pane fade show active" id="pills-multi" role="tabpanel" aria-labelledby="pills-multi-tab" tabindex="0">
    <h1>Multiple choice question</h1>
    <div>
        <h2>Question:</h2>
        <div class="row">
            <label for="vraagInput_m" class="col-sm-2 form-label">What question would you like to ask:</label>
            <div class="col-sm-10">
                <input id="vraagInput_m" class="form-control" type="text">
            </div>
        </div>
    </div>
    <div class="row">
        <h2>Answers:</h2>
        <label for="antwoordInput_m1" class="col-sm-2 form-label">What are the answeroptions:</label>
        <div class="col-sm-10">
            <input id="antwoordInput_m1" class="form-control" type="text">
            <input id="antwoordInput_m2" class="form-control" type="text">
            <input id="antwoordInput_m3" class="form-control" type="text">
            <input id="antwoordInput_m4" class="form-control" type="text">
            <input id="antwoordInput_m5" class="form-control" type="text">
        </div>
    </div>
    <div>
        <h2>Give it a theme:</h2>

        <select id="themes_m">
            @foreach (Theme theme in ViewBag.Project.Theme.Subthemes!)
            {
                <option value="option1" class="text-light">@theme.ThemeName</option>
            }
        </select>

    </div>
    <div>
        <h2>Add conditional point:</h2>
        <label for="answerOption_m1" class="col-sm-2 form-label">Answeroption 1</label>
        <label for="answerOption_m2" class="col-sm-2 form-label">Answeroption 2</label>
        <label for="answerOption_m3" class="col-sm-2 form-label">Answeroption 3</label>
        <label for="answerOption_m4" class="col-sm-2 form-label">Answeroption 4</label>
        <label for="answerOption_m5" class="col-sm-2 form-label">Answeroption 5</label>

        <div>
            <input id="answerOption_m1" type="radio" name="m_optie">
            <input id="answerOption_m2" type="radio" name="m_optie">
            <input id="answerOption_m3" type="radio" name="m_optie">
            <input id="answerOption_m4" type="radio" name="m_optie">
            <input id="answerOption_m5" type="radio" name="m_optie">
        </div>

    </div>
    <button type="button" class="btn btn-primary" id="multiButton"></button>
</div>
<!--single question tab -->
<div class="tab-pane fade" id="pills-single" role="tabpanel" aria-labelledby="pills-single-tab" tabindex="0">
    <h1>Single choice question</h1>
    <div>
        <h2>Is this a conditional step:</h2>

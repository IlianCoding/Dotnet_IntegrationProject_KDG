    <div>
        <h2>Give it a theme:</h2>
        <select id="themes_s">
            @foreach (Theme theme in ViewBag.Project.Theme.Subthemes!)
            {
                <option value="option1" class="text-light">@theme.ThemeName</option>
            }
        </select>
    </div>

    <div>
        <h2>Add a conditional point:</h2>
        <label for="answeroption_s1" class="col-sm-2 form-label">Answeroption 1</label>
        <label for="answeroption_s2" class="col-sm-2 form-label">Answeroption 2</label>
        <label for="answeroption_s3" class="col-sm-2 form-label">Answeroption 3</label>
        <label for="answeroption_s4" class="col-sm-2 form-label">Answeroption 4</label>
        <label for="answeroption_s5" class="col-sm-2 form-label">Answeroption 5</label>

        <div>
            <input id="answeroption_s1" type="radio">
            <input id="answeroption_s2" type="radio">
            <input id="answeroption_s3" type="radio">

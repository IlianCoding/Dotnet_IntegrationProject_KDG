@using NT.BL.Domain.flowpck
@using NT.UI.MVC.Resources
@model NT.BL.Domain.projectpck.Project

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@section Scripts
{
    <script src="~/dist/site.entry.js" defer></script>
    <script src="~/dist/home.entry.js" defer></script>
    <script src="~/dist/carousel.entry.js" defer></script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/dist/carousel.css" rel="stylesheet">
    <title>@Resources.themes_of @Model.Theme</title>
</head>
<body>
<div class="slideShow">
    <div class="slideShowContainer">
        <button id="prev-btn" class="buttonSurvey">
            <svg viewBox="0 0 512 512" width="20" title="chevron-circle-left">
                <path d="M256 504C119 504 8 393 8 256S119 8 256 8s248 111 248 248-111 248-248 248zM142.1 273l135.5 135.5c9.4 9.4 24.6 9.4 33.9 0l17-17c9.4-9.4 9.4-24.6 0-33.9L226.9 256l101.6-101.6c9.4-9.4 9.4-24.6 0-33.9l-17-17c-9.4-9.4-24.6-9.4-33.9 0L142.1 239c-9.4 9.4-9.4 24.6 0 34z" />
            </svg>
        </button>
        <div id="item-list">
            @foreach (Theme theme in Model.Theme.Subthemes)
            {
                <div id="item">
                    <a asp-controller="WebPlatform" asp-action="ThemeDetail" asp-route-themeId="@theme.Id" asp-route-projectId="@Model.Id" class="item-text">@theme.ThemeName</a>
                    <a class="btn btn-primary" asp-controller="WebPlatform" asp-action="ThemeDetail" asp-route-themeId="@theme.Id" asp-route-projectId="@Model.Id">@Resources.comment</a>
                </div>
            }
        </div>
        <button id="next-btn" class="buttonSurvey">
            <svg viewBox="0 0 512 512" width="20" title="chevron-circle-right">
                <path d="M256 8c137 0 248 111 248 248S393 504 256 504 8 393 8 256 119 8 256 8zm113.9 231L234.4 103.5c-9.4-9.4-24.6-9.4-33.9 0l-17 17c-9.4 9.4-9.4 24.6 0 33.9L285.1 256 183.5 357.6c-9.4 9.4-9.4 24.6 0 33.9l17 17c9.4 9.4 24.6 9.4 33.9 0L369.9 273c9.4-9.4 9.4-24.6 0-34z" />
            </svg>
        </button>
    </div>
</div>
</body>
</html>

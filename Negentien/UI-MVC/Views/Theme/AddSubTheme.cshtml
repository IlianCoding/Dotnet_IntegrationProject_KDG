@using NT.UI.MVC.Resources
@model NT.UI.MVC.Models.NewSubThemeViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-controller="Theme" asp-action="AddSubTheme" asp-route-flowId="@ViewBag.FlowId" method="post">
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" asp-for="ThemeName">@Resources.theme_name</label>
        <div class="col-sm-10">
            <span class="required-label">@Resources.required</span>
            <input class="form-control" asp-for="ThemeName">
        </div>
        <span class="text-danger" asp-validation-for="ThemeName"></span>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" asp-for="ShortInformation">@Resources.theme_info</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ShortInformation">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">@Resources.add_subtheme</button>
</form>